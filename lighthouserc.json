{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "staticDistDir": ".next",
      "settings": {
        "preset": "desktop",
        "throttling": {
          "cpuSlowdownMultiplier": 4
        }
      },
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/auth/login",
        "http://localhost:3000/chat"
      ]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "categories:pwa": ["warn", { "minScore": 0.8 }],
        
        "first-contentful-paint": ["warn", { "maxNumericValue": 2000 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 300 }],
        "interactive": ["warn", { "maxNumericValue": 3800 }],
        "speed-index": ["warn", { "maxNumericValue": 3400 }],
        
        "uses-responsive-images": "warn",
        "uses-optimized-images": "warn",
        "uses-text-compression": "warn",
        "uses-rel-preconnect": "warn",
        "font-display": "warn",
        
        "resource-summary:document:size": ["warn", { "maxNumericValue": 14336 }],
        "resource-summary:font:count": ["warn", { "maxNumericValue": 3 }],
        "resource-summary:third-party:count": ["warn", { "maxNumericValue": 5 }],
        
        "unused-javascript": ["warn", { "maxLength": 2 }],
        "unused-css-rules": ["warn", { "maxLength": 1 }],
        "modern-image-formats": "warn",
        
        "errors-in-console": ["error", { "minScore": 0 }],
        "geolocation-on-start": "error",
        "notification-on-start": "error",
        "no-vulnerable-libraries": "error"
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "reportFilenamePattern": "report-%%PATHNAME%%-%%DATETIME%%.%%EXTENSION%%"
    }
  }
}
